# PHP-FPM
check process php-fpm with pidfile /var/run/php5.6-fpm.pid
start program = "/usr/sbin/service php5.6-fpm start"
stop program  = "/usr/sbin/service php5.6-fpm stop"

if failed unixsocket /var/run/fastcgi.sock
then exec "/usr/sbin/service php5.6-fpm reload"

check file php-fpm-config with path /usr/local/php5.6/etc/php-fpm.conf
if changed checksum
then exec "/usr/sbin/service php5.6-fpm reload"
